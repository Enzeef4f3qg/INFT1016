  <h1>JavaScript Demo Task 3</h1>
  <a href="#" onclick = "document.getElementById('box1').innerHTML = '<li>The link was pressed 1 times.</li>';">Click me </a>
  <p id="box1"></p>
</body>
<html>
    <html>
        <head>
            <title>Week 11</title>
        
            <script>
                counter = 0;
                counter1 = 0;
        
                function countClicks() {
                    counter = counter + 1;
                    var output = 'The link was pressed ' + counter + ' times.';
                    var element = document.getElementById('boxy');
                    element.innerHTML = output;
                }
                function countClickss(element) {
                    counter1 = counter1 + 1;
                    var output = 'The link was pressed ' + counter1 + ' times.';
                    element.innerHTML = output;
                }
            </script>
        
        </head>
        <body>
            <h1>JavaScript Demo Task 4</h1>
            <a href="#" onclick="countClicks();">Click me</a>
            <p id="boxy"></p>
            <h1>JavaScript Demo Task 5</h1>
            <a href="#" onclick="countClickss(this);">Click me</a>
            <p id="box"></p>
            <h1>JavaScript Demo Task 6</h1>
            <img src="http://www.outgrabe.net/cat01.jpg" onmouseover="this.src='http://www.outgrabe.net/cat02.jpg'" onmouseout="this.src='http://www.outgrabe.net/cat01.jpg'"/>
        </body>
        </html>
        
        